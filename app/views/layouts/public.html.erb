<!DOCTYPE html PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN"
"http://www.w3.org/TR/html4/loose.dtd">
<html lang="en">
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
        <title>University Asset Management System | <%= @page_title || 'Public Area' %></title>
        <meta name="author" content="Labinot Halilaj">
         <%= stylesheet_link_tag('style', 'demo_table_jui', 'ui-lightness/jquery-ui-1.8.11.custom.css', 'TableTools', :media => 'all') %> 
        <%= javascript_include_tag :defaults, 'jquery-ui-1.8.11.custom.min.js', 'jquery.dataTables.js', 'screen.js', 'TableTools.js', 'ZeroClipboard.js' %> 
        <script type="text/javascript" charset="utf-8">
            $(document).ready( function() {
                $('#example').dataTable({});
            } );
        </script>
        <script>
          $(document).ready(function() {
            var $your_dialog = $('#your_dialog').dialog({ 
              autoOpen: false, 
              title: 'Edit',
              modal: true,
              draggable: false
            });
          });
         </script>
    </head>
    <body>
        <div id="wrapper">
            <div id="container">
                <div id="top">
                    <div id="logo">
                        <%= image_tag('themeimg/logo.gif', :align => 'left',  :alt => 'University Asset Management System') %>
                    </div><!-- end #logo -->
                </div><!-- end #top -->
                <div id="topnavigation">
                    <ul id="topnav">
                        <li>
                            <a href="http://localhost:3000">Home</a>
                        </li>
                        <li>
                            <%= link_to("Categories", :controller => 'categories') %>
                        </li>
                        <li>
                            <%= link_to("Products", :controller => 'products') %>
                        </li>
                        <li>
                            <%= link_to("Suppliers", :controller => 'suppliers') %>
                        </li>
                        <li>
                            <%= link_to("Employees", :controller => 'employees') %>
                        </li>
                        <li>
                            <%= link_to("Admin Users", :controller => 'admin_users') %>
                        </li>
                        <li>
                            <%= link_to("Logout", :controller => 'access', :action => 'logout') %>
                        </li>
                    </ul>
                </div>
                <% if !flash[:notice].blank? %>
                <div class="notice">
                    <%= flash[:notice] %>
                </div>
                <% end %>
                <div id="content">
                    <%= yield %>
                    <div class="clear">
                    </div>
                </div><!-- end #content --><br/>
                <div id="footer">
                    <div id="footer-text">
                        <p id="copyright">
                            &copy; oseose.com / Labinot Halilaj / All Rights Reserved
                        </p>
                    </div><!-- end #footer-text -->
                </div><!-- end #footer -->
            </div><!-- end #container -->
        </div>
    </body>
</html>
