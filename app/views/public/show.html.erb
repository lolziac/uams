<% @page_title = "Categories List" %>

<div class="category list">
  <h1 class="pagetitle">Categories</h1>
  <%= link_to("Add New Category", {:action => 'new'}, :class => 'action new') %><br />
  
  <% @products.each do |product| %>
  <ul class="categ-type1">
    <li>
      <div class="categ-img-type1" >
      <h2><%= product.name %></h2>
      <a href="#"><img src="<%= product.photo.url(:small) %>"></a>
      </div>          
      <div>
        Buttons
      </div>
    </li>
  </ul>
  <% end %>
</div>
