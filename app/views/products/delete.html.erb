<% @page_title = "Delete Product: #{@product.name}" %>

<%= link_to("<< Back to List", {:action => 'list'}, :class => 'back-link') %>

<div class="product delete">
  <h2>Delete Product</h2>
  
  <%= form_for(:product, :url => {:action => 'destroy', :id => @product.id}) do |f| -%>

    <p>Are you sure you want to permanently delete this product?</p>
  
    <p class="reference-name"><%= @product.name %></p>
  
    <div class="form-buttons">
      <%= submit_tag("Delete Product") %>
    </div>
    
  <% end %>
</div>
