<hr/>
<%= error_messages_for(@product) %>

<%= f.label(:category) %>
<%= f.select(:category_id, Category.all.collect {|s| [s.name, s.id]}) %><br/>

<%= f.label(:brand) %>
<%= f.text_field(:brand) %><br/>

<%= f.label(:name) %>
<%= f.text_field(:name) %><br/>

<%= f.label(:modelnr, "Model Number") %>
<%= f.text_field(:modelnr) %><br/>

<%= f.label(:serialnr, "Serial Number") %>
<%= f.text_field(:serialnr) %><br/>

<%= f.label(:supplier) %>
<%= f.select(:supplier_id, Supplier.all.collect {|s| [s.company_name, s.id]}) %><br/>

<%= f.label(:photo) %>
<%= f.file_field :photo %><br/>

<%= f.label(:price) %>
<%= f.text_field(:price) %><br/>

<%= f.label(:date_purchased, "Date Purchased") %>
<%= f.date_select(:date_purchased, :order => [:month, :day, :year]) %><br/><br/>

<%= f.label(:info) %>
<%= f.text_area(:info, :size => '40x10') %><br/><br/>

<%= f.label(:status) %>
        <%= f.radio_button(:status, 'Available') %> Available
        <%= f.radio_button(:status, 'In Use') %> In Use
        <%= f.radio_button(:status, 'Unavailable') %> Unavailable
        <br/><br/>
