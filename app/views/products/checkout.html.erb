<% @page_title = "Check Out Asset: #{@product.name}"%>

<div class="product checkout">

        <div id="contform">
          <%= form_for(:product, :html => { :multipart => true }, :url => {:action => 'deassign', :id => @product.id}) do |f| %>
            <hr/>
            <div id='conthold'>
                <br/>
                <h5>This asset will be deassigned from <%= @product.employee.first_name %> <%= @product.employee.last_name %>:</h5>
                
                <%= render(:partial => "checkout", :locals => {:f => f}) %>
                <div class="tool_btn">
                    <input type="submit" name="submit" class="button" value="Check Out" />
                </div>
                <hr/>
            </div>
            <% end %>
        </div>
   
</div>