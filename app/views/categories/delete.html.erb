<% @page_title = "Delete Category: #{@category.name}" %>

<div class="category delete">
  <h2>Delete Category</h2>
  <%= link_to("<< Back to List", {:action => 'list'}, :class => 'back-link') %>
  
  <%= form_for(:category, :url => {:action => 'destroy', :id => @category.id}) do |f| -%>

    <p>Are you sure you want to permanently delete this category?</p>
	<ul class="categ-type1">
		<li>
			<div class="categ-img-type1" >
			<h2><%= @category.name %></h2>
			<a href="#"><img src="<%= @category.photo.url(:small) %>"></a>
			</div>					
		</li>
	</ul>
  
    <div class="form-buttons">
      <%= submit_tag("Delete Category") %>
    </div>
    
  <% end %>
</div>
